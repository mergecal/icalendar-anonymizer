# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
indent_style = space
indent_size = 4

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.toml]
indent_style = space
indent_size = 2

[*.rst]
indent_style = space
indent_size = 3
trim_trailing_whitespace = false

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
